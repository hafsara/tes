{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Form Management API",
    "description": "API for managing applications, campaigns, form containers, and related resources."
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/applications": {
      "post": {
        "summary": "Create an Application",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "id": { "type": "string" }
              },
              "required": ["name", "id"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Application created successfully" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/applications/{app_token}": {
      "put": {
        "summary": "Update Application Name or Token",
        "parameters": [
          {
            "in": "path",
            "name": "app_token",
            "type": "string",
            "required": true,
            "description": "Application token to update"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "new_token": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Application updated successfully" },
          "400": { "description": "Invalid input" },
          "404": { "description": "Application not found" }
        }
      }
    },
    "/campaigns": {
      "post": {
        "summary": "Create a Campaign",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "app_id": { "type": "string" }
              },
              "required": ["name", "app_id"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Campaign created successfully" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/campaigns/{campaign_id}": {
      "put": {
        "summary": "Update a Campaign",
        "parameters": [
          {
            "in": "path",
            "name": "campaign_id",
            "type": "integer",
            "required": true,
            "description": "ID of the campaign to update"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" }
              },
              "required": ["name"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Campaign updated successfully" },
          "400": { "description": "Invalid input" },
          "404": { "description": "Campaign not found" }
        }
      },
      "delete": {
        "summary": "Delete a Campaign",
        "parameters": [
          {
            "in": "path",
            "name": "campaign_id",
            "type": "integer",
            "required": true,
            "description": "ID of the campaign to delete"
          }
        ],
        "responses": {
          "200": { "description": "Campaign deleted successfully" },
          "404": { "description": "Campaign not found" }
        }
      }
    },
    "/form-containers": {
      "post": {
        "summary": "Create a Form Container",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "description": { "type": "string" },
                "user_email": { "type": "string" },
                "escalade_email": { "type": "string" },
                "app_id": { "type": "string" },
                "campaign_id": { "type": "integer" },
                "forms": {
                  "type": "object",
                  "properties": {
                    "questions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "label": { "type": "string" },
                          "type": { "type": "string" },
                          "isRequired": { "type": "boolean" },
                          "options": {
                            "type": "array",
                            "items": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                }
              },
              "required": ["title", "description", "user_email", "escalade_email", "app_id"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Form container created successfully" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/form-containers/apps/{app_ids}": {
      "get": {
        "summary": "Get Form Containers by Applications",
        "parameters": [
          {
            "in": "path",
            "name": "app_ids",
            "type": "string",
            "required": true,
            "description": "Comma-separated application IDs"
          },
          {
            "in": "query",
            "name": "filter",
            "type": "string",
            "description": "Filter type (e.g., 'status')"
          },
          {
            "in": "query",
            "name": "status",
            "type": "string",
            "description": "Form container status"
          }
        ],
        "responses": {
          "200": { "description": "Form containers fetched successfully" },
          "400": { "description": "Invalid filter or status" }
        }
      }
    },
    "/form-containers/{access_token}": {
      "get": {
        "summary": "Get Form Container by Access Token",
        "parameters": [
          {
            "in": "path",
            "name": "access_token",
            "type": "string",
            "required": true,
            "description": "Access token of the form container"
          }
        ],
        "responses": {
          "200": { "description": "Form container fetched successfully" },
          "404": { "description": "Form container not found" }
        }
      }
    },
    "/form-containers/{container_id}/forms/{form_id}/validate": {
      "post": {
        "summary": "Validate a Form Container",
        "parameters": [
          {
            "in": "path",
            "name": "container_id",
            "type": "integer",
            "required": true,
            "description": "ID of the form container"
          },
          {
            "in": "path",
            "name": "form_id",
            "type": "integer",
            "required": true,
            "description": "ID of the form"
          }
        ],
        "responses": {
          "200": { "description": "Form container validated successfully" },
          "404": { "description": "Form container or form not found" }
        }
      }
    }
  }
}
