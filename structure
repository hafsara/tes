<VirtualHost *:8082>
    ServerName https://fouras-emea.dev.echonet
    ServerAdmin emea.cib.itrap@bnpparibas.com
    DocumentRoot /var/www/fouras-emea.dev.echonet/frontend

    <Directory /var/www/fouras-emea.dev.echonet/frontend>
        AllowOverride all
        Require all granted
    </Directory>

    WSGIScriptAlias /api /var/www/fouras-emea.dev.echonet/backend/app-wsgi

    <Directory /var/www/fouras-emea.dev.echonet/backend>
        AllowOverride all
        Require all granted
        # Autoriser le header Authorization
        <IfModule mod_headers.c>
            Header always set Access-Control-Allow-Headers "Authorization, Content-Type"
        </IfModule>
    </Directory>

    ErrorLog logs/fouras-emea.dev.echonet_error.log
    CustomLog logs/fouras-emea.dev.echonet_access.log combined
</VirtualHost>
