<VirtualHost *:8082>
    ServerName test.dev.com
    ServerAlias www.test.dev.com

    # Frontend (Angular)
    DocumentRoot /var/www/test.dev.com/frontend
    <Directory /var/www/test.dev.com/frontend>
        Options FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    # Backend (Flask)
    WSGIScriptAlias /api /var/www/test.dev.com/backend/wsgi.py
    <Directory /var/www/test.dev.com/backend>
        Require all granted
    </Directory>

    # Flower (Reverse Proxy)
    ProxyPreserveHost On
    ProxyPass /flower http://localhost:5555/
    ProxyPassReverse /flower http://localhost:5555/

    # Logs
    ErrorLog ${APACHE_LOG_DIR}/test_dev_com_error.log
    CustomLog ${APACHE_LOG_DIR}/test_dev_com_access.log combined
</VirtualHost>



fetchSSOInfo(): Observable<any> {
  return this.http.get(this.authUrl, { observe: 'response' }).pipe(
    map((response) => {
      console.log('Response Headers:', response.headers);
      return response.body;
    }),
    catchError((error) => {
      console.error('Error fetching SSO info:', error);
      return throwError(() => new Error('Failed to fetch SSO info'));
    })
  );
}
